@model Jallikattu.Data.ViewModels.RegisterVM

@{
    ViewBag.Title = "Register";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    /* CARD */
    .login-card {
        margin-top: 120px;
        max-width: 480px;
        width: 100%;
        background: #fff;
        border: 1px solid #dee2e6;
        border-radius: 6px;
    }

    /* HEADER */
    .login-header {
        background: #f8f9fa;
        border-bottom: 1px solid #dee2e6;
        padding: 16px;
        text-align: center;
    }

    /* BODY */
    .login-body {
        padding: 24px;
    }

    /* FOOTER */
    .login-footer {
        border-top: 1px solid #dee2e6;
        padding: 12px;
        text-align: center;
    }

    /* INPUTS */
    .login-card .form-control {
        width: 100% !important;
        max-width: 100% !important;
        border-radius: 6px;
    }

        .login-card .form-control:focus {
            border-color: #86b7fe;
            box-shadow: 0 0 0 .25rem rgba(13,110,253,.25);
        }

    /* BUTTON */
    #registerBtn {
        background: #2fb380;
        border: none;
        border-radius: 6px;
        padding: 10px;
        font-weight: 500;
        width: 100%;
    }

        #registerBtn:hover,
        #registerBtn:focus,
        #registerBtn:active {
            background: #28986D;
            box-shadow: none;
        }

    body {
        padding-top: 20px;
        background-color: #f8f9fa;
    }
</style>

<div class="container d-flex justify-content-center">

    <div class="login-card">

        <!-- Header -->
        <div class="login-header">
            <h4 class="mb-0">Register</h4>
        </div>

        <!-- Body -->
        <div class="login-body">

            @using (Html.BeginForm("Register", "Account", FormMethod.Post))
            {
                @Html.AntiForgeryToken()

                if (!ViewData.ModelState.IsValid)
                {
                    @Html.ValidationSummary(true, "", new { @class = "alert alert-danger" })
                }


                <div class="mb-3">
                    @Html.LabelFor(m => m.FullName, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.FullName, new { @class = "form-control" })
                    @Html.ValidationMessageFor(m => m.FullName, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Email, new { @class = "form-label" })
                    @Html.TextBoxFor(m => m.Email, new { @class = "form-control", type = "email", placeholder = "Email" })
                    @Html.ValidationMessageFor(m => m.Email, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.Password, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger small" })
                </div>

                <div class="mb-3">
                    @Html.LabelFor(m => m.ConfirmPassword, new { @class = "form-label" })
                    @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control", placeholder = "Password" })
                    @Html.ValidationMessageFor(m => m.ConfirmPassword, "", new { @class = "text-danger small" })
                </div>

                <button id="registerBtn" type="submit" class="btn btn-success">
                    Register
                </button>
            }

        </div>

        <!-- Footer -->
        <div class="login-footer">
            <small>
                Already have an account?
                <a href="@Url.Action("Login", "Account")">Login</a>
            </small>
        </div>

    </div>

</div>
