@model Jallikattu.Models.CattleBreedsTable

@{
    ViewBag.Title = "Add New Cattle Breed";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Add New Cattle Breed</h4>
                </div>

                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                      
                        <div class="mb-3">
                            @Html.LabelFor(m => m.BreedName, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.BreedName,
                                new { @class = "form-control", placeholder = "Eg: Kangeyam" })
                            @Html.ValidationMessageFor(m => m.BreedName, "", new { @class = "text-danger" })
                        </div>

                       
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Utility, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Utility,
                                new { @class = "form-control", placeholder = "Eg: Draught, Jallikattu" })
                        </div>

                       
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Origin, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Origin,
                                new { @class = "form-control", placeholder = "Eg: Tamil Nadu" })
                        </div>

                       
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Distribution, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Distribution,
                                new { @class = "form-control", placeholder = "Eg: Erode, Tiruppur" })
                        </div>

                        
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Description, 5, 0,
                                new { @class = "form-control", placeholder = "Detailed description about the breed..." })
                        </div>

                        
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "https://image-url.jpg",
                                    id = "imageUrlInput"
                                })
                        </div>

                        <!-- Image Preview -->
                        <div class="mb-4 text-center">
                            <img id="imagePreview"
                                 src=""
                                 alt="Image Preview"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height:220px; display:none;" />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                ← Back to List
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                Save Breed
                            </button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Image Preview Script -->
<script>
    const imageInput = document.getElementById("imageUrlInput");
    const imagePreview = document.getElementById("imagePreview");

    imageInput.addEventListener("input", function () {
        const url = this.value.trim();

        if (url) {
            imagePreview.src = url;
            imagePreview.style.display = "block";

            imagePreview.onerror = function () {
                imagePreview.style.display = "none";
            };
        } else {
            imagePreview.style.display = "none";
        }
    });
</script>
