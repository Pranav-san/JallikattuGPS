@model IEnumerable<Jallikattu.Models.CattleBreedsTable>
@{
    ViewBag.Title = "CattleBreedsPanel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="container mt-4">

        <div class="d-flex justify-content-between align-items-center mb-3">
            <h2 class="mb-0">Cattle Breeds</h2>

            <a href="@Url.Action("Create")" class="btn btn-success">
                + Add New Breed
            </a>
        </div>

        <div class="card shadow-sm">
            <div class="card-body p-0">

                <table class="table table-striped table-hover mb-0 align-middle">
                    <thead class="table-dark">
                        <tr>
                            <th>Image</th>
                            <th>Breed Name</th>
                            <th>Utility</th>
                            <th>Origin</th>
                            <th>Description</th>
                            <th>Created At</th>
                            <th class="text-center">Actions</th>
                        </tr>
                    </thead>

                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <!-- Image -->
                                <td style="width:90px">
                                    <img src="@item.ImageURL"
                                         alt="@item.BreedName"
                                         class="img-thumbnail"
                                         style="width:70px;height:70px;object-fit:cover;">
                                </td>

                                <!-- Breed Name -->
                                <td class="fw-bold">@item.BreedName</td>

                                <!-- Utility -->
                                <td>@item.Utility</td>

                                <!-- Origin -->
                                <td>@item.Origin</td>

                                <!-- Description (trimmed) -->
                                <td style="max-width:300px">
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        @item.Description.Substring(0, Math.Min(80, item.Description.Length))@:
                                    }
                                </td>

                                <!-- Created Date -->
                                <td>
                                    @item.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
                                </td>

                                <!-- Actions -->
                                <td class="text-center">
                                    <a href="@Url.Action("Edit", new { id = item.CattleID })"
                                       class="btn btn-sm btn-primary">
                                        Edit
                                    </a>

                                    <a href="@Url.Action("Details", new { id = item.CattleID })"
                                       class="btn btn-sm btn-info text-white">
                                        View
                                    </a>

                                    <a href="@Url.Action("Delete", new { id = item.CattleID })"
                                       class="btn btn-sm btn-danger">
                                        Delete
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>

                </table>

            </div>
        </div>
    </div>
</div>

