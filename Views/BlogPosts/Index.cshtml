@model IEnumerable<Jallikattu.Models.BlogPostsTable>

@{
    ViewBag.Title = "Blog Posts";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Blog Posts</h2>

        <a href="@Url.Action("Create")" class="btn btn-success">
            + Create New Blog
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-striped table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width:90px;">Image</th>
                        <th>Title</th>
                        <th>Content Preview</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Image -->
                            <td>
                                <img src="@item.ImageURL"
                                     alt="@item.BlogTitle"
                                     class="img-thumbnail"
                                     style="width:70px;height:70px;object-fit:cover;">
                            </td>

                            <!-- Title -->
                            <td class="fw-bold">
                                @item.BlogTitle
                            </td>

                            <!-- Content Preview -->
                            <td style="max-width:350px;">
                                @if (!string.IsNullOrEmpty(item.BlogContent))
                                {
                                    @item.BlogContent.Substring(0, Math.Min(100, item.BlogContent.Length))@:
                                }
                            </td>

                            <!-- Actions -->
                            <td class="text-center">
                                <a href="@Url.Action("Details", new { id = item.PostID })"
                                   class="btn btn-sm btn-info text-white">
                                    View
                                </a>

                                <a href="@Url.Action("Edit", new { id = item.PostID })"
                                   class="btn btn-sm btn-primary">
                                    Edit
                                </a>

                                <a href="@Url.Action("Delete", new { id = item.PostID })"
                                   class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>

</div>
