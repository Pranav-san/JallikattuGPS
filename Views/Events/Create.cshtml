@model Jallikattu.Models.EventsTable

@{
    ViewBag.Title = "Add New Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card shadow-sm">
                <!-- Header -->
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Add New Event</h4>
                </div>

                <!-- Body -->
                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Event Name -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.EventName, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.EventName,
                                new { @class = "form-control", placeholder = "Eg: Jallikattu Festival" })
                            @Html.ValidationMessageFor(m => m.EventName, "", new { @class = "text-danger" })
                        </div>

                        <!-- Event Date -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.EventDate, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.EventDate,
                                new { @class = "form-control", type = "date" })
                            @Html.ValidationMessageFor(m => m.EventDate, "", new { @class = "text-danger" })
                        </div>

                        <!-- Event Location -->
                        <div class="mb-4">
                            @Html.LabelFor(m => m.EventLocation, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.EventLocation,
                                new { @class = "form-control", placeholder = "Eg: Avaniapuram, Madurai" })
                            @Html.ValidationMessageFor(m => m.EventLocation, "", new { @class = "text-danger" })
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                ← Back to List
                            </a>

                            <button type="submit" class="btn btn-success px-4">
                                Save Event
                            </button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
