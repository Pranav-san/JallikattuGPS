@model Jallikattu.Models.EventsTable

@{
    ViewBag.Title = "Edit Event";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-7">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Event</h4>
                </div>

                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.EventID)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Event Name -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.EventName, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.EventName,
                                new { @class = "form-control", placeholder = "Event name" })
                            @Html.ValidationMessageFor(m => m.EventName, "", new { @class = "text-danger" })
                        </div>

                        <!-- Event Date -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.EventDate, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.EventDate,
                                "{0:yyyy-MM-dd}",
                                new
                                {
                                    @class = "form-control",
                                    type = "date"
                                })
                            @Html.ValidationMessageFor(m => m.EventDate, "", new { @class = "text-danger" })
                        </div>

                        <!-- Event Location -->
                        <div class="mb-4">
                            @Html.LabelFor(m => m.EventLocation, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.EventLocation,
                                new { @class = "form-control", placeholder = "Event location" })
                            @Html.ValidationMessageFor(m => m.EventLocation, "", new { @class = "text-danger" })
                        </div>

                        <!-- Buttons -->
                <div class="d-flex gap-3  justify-content-center">
                    <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                        ← Back to List
                    </a>

                    <!-- Toggle Status -->
                    @if (Model.Status == 1)
                    {
                        <button type="submit"
                                name="action"
                                value="deactivate"
                                class="btn btn-warning">
                            Deactivate
                        </button>
                    }
                    else
                    {
                        <button type="submit"
                                name="action"
                                value="activate"
                                class="btn btn-success">
                            Activate
                        </button>
                    }

                    <button type="submit" class="btn btn-primary px-4">
                        Update Event
                    </button>
                </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>
