<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Jallikattu GPS</title>

    <link rel="icon" href="~/Images/icon/Icon_1.png" />

    <!--Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" />

    <!-- Site CSS -->
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")

    <style>
        body {
            padding-top: 80px;
            background-color: #f8f9fa;
        }


        .custom-navbar {
            background-color: #f1f1f1;
            border-bottom: 1px solid #e0e0e0;
            box-shadow: 0 1px 4px rgba(0,0,0,0.08);
        }

        #icon {
            height: 40px;
        }

        .brand-text {
            font-weight: 600;
            font-size: 1.2rem;
            color: #2f3e34;
            letter-spacing: 0.3px;
        }

        .custom-navbar .nav-link {
            color: #333 !important;
            font-family: Bahnschrift;
            font-weight: 400;
            font-size: 16px;
        }

            .custom-navbar .nav-link:hover {
                color: #2f3e34 !important;
                text-decoration: underline;
                text-underline-offset: 6px;
            }


        #SearchBar {
            min-width: 220px;
            max-width: 280px;
            border-radius: 20px;
            padding-left: 14px;
            border: 1px solid #ccc;
        }


        .btn-login {
            color: #555;
            border: 1px solid #bbb;
            background-color: transparent;
        }

            .btn-login:hover {
                background-color: #e9ecef;
                color: #333;
            }

        .btn-register {
            background-color: #5f8f6f;
            color: #ffffff;
            border: none;
        }

            .btn-register:hover {
                background-color: #4f7f60;
            }


        #Cattle-info-Main-Container {
            padding-top: 120px;
        }


        .card-img-fixed {
            height: 220px;
            object-fit: cover;
            width: 100%;
        }


        footer {
            margin-top: 60px;
            background-color: #2f3e34;
        }


        @@media (max-width: 991px) {
            #SearchBar {
                width: 100%;
            }
        }
    </style>
</head>

<body>

    <!-- NAVBAR -->
    <nav class="navbar navbar-expand-lg fixed-top custom-navbar">
        <div class="container-fluid">


            <a class="navbar-brand d-flex align-items-center" href="@Url.Action("Index", "Home")">
                <img id="icon" class="me-2 rounded" src="~/Images/icon/Icon_1.png" alt="Logo" />
                <span class="brand-text">Jallikattu GPS</span>
            </a>


            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNavbar">
                <span class="navbar-toggler-icon"></span>
            </button>


            <div class="collapse navbar-collapse" id="mainNavbar">


                <ul class="navbar-nav me-auto mb-3 mb-lg-0">
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Index", "Home")">Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Blog", "Home")">Blog</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("About", "Home")">About</a></li>
                    <li class="nav-item"><a class="nav-link" href="#Events">Events</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("CattleTrackingSystem", "Home")">GPS Tracker</a></li>
                    <li class="nav-item"><a class="nav-link" href="@Url.Action("Contact", "Home")">Contact</a></li>
                </ul>


                <form class="d-flex mb-3 mb-lg-0 me-lg-3">
                    <input id="SearchBar" class="form-control" placeholder="Search breeds, events..." />
                </form>


                <div class="d-flex gap-2">
                    <a href="#" class="btn btn-login btn-sm">Login</a>
                    <a href="#" class="btn btn-register btn-sm">Register</a>
                </div>

            </div>
        </div>
    </nav>


    <main class="container-fluid">
        @RenderBody()
    </main>

    <!-- FOOTER -->
    <footer class="text-white text-center py-4">
        <div class="container">
            <p class="mb-1">
                &copy; @DateTime.Now.Year - Rapsys Info Tech - Jallikattu GPS
            </p>
            <ul class="list-inline mb-0">
                <li class="list-inline-item"><a class="text-white text-decoration-none" href="#">Privacy Policy</a></li>
                <li class="list-inline-item"><a class="text-white text-decoration-none" href="@Url.Action("Index", "Home")">Home</a></li>
            </ul>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
    @RenderSection("scripts", required: false)

</body>
</html>
