@model Jallikattu.Data.ViewModels.SearchResultsVM

<h4 class="mb-4 pt-4">
    Search results for "<strong>@Model.Query</strong>"
</h4>

@if (!Model.CattleBreeds.Any() && !Model.BlogPosts.Any() && !Model.Products.Any())
{
    <div class="alert alert-warning">No results found.</div>
}

@if (Model.CattleBreeds.Any())
{
    <h2 class="mt-4">Cattle Breeds</h2>

    <div class="row gy-4">
        @foreach (var item in Model.CattleBreeds)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100">

                    <img class="card-img-fixed"
                         src="@item.ImageURL"
                         alt="@item.BreedName" />

                    <div class="card-body d-flex flex-column">

                        <h3 class="card-title">@item.BreedName</h3>

                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(item.Description))
                            {
                                @item.Description.Substring(0, Math.Min(120, item.Description.Length))
                            }
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("CattleDetails", "CattleBreeds", new { id = item.CattleID })"
                               class="btn btn-primary">
                                Read more
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}


@if (Model.BlogPosts.Any())
{
    <h2 class="mt-5">Blog</h2>

    <div class="row gy-4">
        @foreach (var post in Model.BlogPosts)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100">

                    <img class="card-img-fixed"
                         src="@post.ImageURL"
                         alt="@post.BlogTitle" />

                    <div class="card-body d-flex flex-column">

                        <h3 class="card-title">@post.BlogTitle</h3>

                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(post.BlogContent))
                            {
                                @Html.Raw(
                                    post.BlogContent.Length > 150
                                    ? post.BlogContent.Substring(0, 150) + "..."
                                    : post.BlogContent
                                )
                            }
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("PostDetails", "BlogPosts", new { id = post.PostID })"
                               class="btn btn-primary">
                                Read more
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}


@if (Model.Products.Any())
{
    <h2 class="mt-5">Our Products</h2>

    <div class="row gy-4">
        @foreach (var product in Model.Products)
        {
            <div class="col-12 col-sm-6 col-md-4">
                <div class="card h-100">

                    <img class="card-img-fixed"
                         src="@product.ImageURL"
                         alt="@product.ProductName" />

                    <div class="card-body d-flex flex-column">

                        <h3 class="card-title">@product.ProductName</h3>

                        <p class="card-text">
                            @if (!string.IsNullOrEmpty(product.Description))
                            {
                                @product.Description.Substring(0, Math.Min(120, product.Description.Length))
                            }
                        </p>

                        <div class="mt-auto">
                            <a href="@Url.Action("ProductDetails", "Products", new { id = product.ProductID })"
                               class="btn btn-primary">
                                View more
                            </a>
                        </div>

                    </div>
                </div>
            </div>
        }
    </div>
}
