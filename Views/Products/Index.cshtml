@model IEnumerable<Jallikattu.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h2 class="mb-0">Products</h2>

        <a href="@Url.Action("Create")" class="btn btn-success">
            + Add New Product
        </a>
    </div>

    <!-- Table Card -->
    <div class="card shadow-sm">
        <div class="card-body p-0">

            <table class="table table-striped table-hover mb-0 align-middle">
                <thead class="table-dark">
                    <tr>
                        <th>Image</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Stock</th>
                        <th>Description</th>
                        <th>Created At</th>
                        <th class="text-center">Actions</th>
                    </tr>
                </thead>

                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <!-- Image -->
                            <td style="width:90px">
                                <img src="@item.ImageURL"
                                     alt="@item.ProductName"
                                     class="img-thumbnail"
                                     style="width:70px;height:70px;object-fit:cover;">
                            </td>

                            <!-- Product Name -->
                            <td class="fw-bold">@item.ProductName</td>

                            <!-- Price -->
                            <td>₹ @item.Price</td>

                            <!-- Stock -->
                            <td>
                                @if (item.Stock > 0)
                                {
                                    <span class="badge bg-success">In Stock (@item.Stock)</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">Out of Stock</span>
                                }
                            </td>

                            <!-- Description (trimmed) -->
                            <td style="max-width:300px">
                                @if (!string.IsNullOrEmpty(item.Description))
                                {
                                    @item.Description.Substring(0, Math.Min(80, item.Description.Length))@:
                                }
                            </td>

                            <!-- Created Date -->
                            <td>
                                @item.CreatedAt.ToString("dd MMM yyyy, hh:mm tt")
                            </td>

                            <!-- Actions -->
                            <td class="text-center">
                                <a href="@Url.Action("Edit", new { id = item.ProductID })"
                                   class="btn btn-sm btn-primary">
                                    Edit
                                </a>

                                <a href="@Url.Action("Details", new { id = item.ProductID })"
                                   class="btn btn-sm btn-info text-white">
                                    View
                                </a>

                                <a href="@Url.Action("Delete", new { id = item.ProductID })"
                                   class="btn btn-sm btn-danger">
                                    Delete
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>

            </table>

        </div>
    </div>
</div>
