@model Jallikattu.Models.Product

@{
    ViewBag.Title = "Add New Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h4 class="mb-0">Add New Product</h4>
                </div>

                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Product Name -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ProductName, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ProductName,
                                new { @class = "form-control", placeholder = "Eg: Bull Rope" })
                            @Html.ValidationMessageFor(m => m.ProductName, "", new { @class = "text-danger" })
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Price, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Price,
                                new { @class = "form-control", placeholder = "Eg: 1500" })
                            @Html.ValidationMessageFor(m => m.Price, "", new { @class = "text-danger" })
                        </div>

                        <!-- Stock -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Stock, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Stock,
                                new { @class = "form-control", placeholder = "Eg: 25" })
                            @Html.ValidationMessageFor(m => m.Stock, "", new { @class = "text-danger" })
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Description, 5, 0,
                                new { @class = "form-control", placeholder = "Product description..." })
                            @Html.ValidationMessageFor(m => m.Description, "", new { @class = "text-danger" })
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "https://image-url.jpg",
                                    id = "imageUrlInput"
                                })
                            @Html.ValidationMessageFor(m => m.ImageURL, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL2,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "https://image-url.jpg",
                                    id = "imageUrlInput"
                                })
                            @Html.ValidationMessageFor(m => m.ImageURL, "", new { @class = "text-danger" })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL3,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "https://image-url.jpg",
                                    id = "imageUrlInput"
                                })
                            @Html.ValidationMessageFor(m => m.ImageURL, "", new { @class = "text-danger" })
                        </div>

                        <!---Feature Image--->

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureImageURL, "Feature Image URL (Section 1)",
                                new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.FeatureImageURL,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "https://feature-image-1.jpg",
                                    id = "featureImageUrl1"
                                })
                        </div>

                        <!-- Feature Image URL 2 -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureImageURL2, "Feature Image URL (Section 2)",
                                new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.FeatureImageURL2,
                                new
                                {
                                    @class = "form-control",
                                    placeholder = "https://feature-image-2.jpg",
                                    id = "featureImageUrl2"
                                })
                        </div>


                        <!-- Image Preview -->
                        <div class="mb-4 text-center">
                            <img id="imagePreview"
                                 src=""
                                 alt="Image Preview"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height:220px; display:none;" />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")" class="btn btn-outline-secondary">
                                ← Back to List
                            </a>
                            @if (User.IsInRole("Admin"))
                            {
                                <button type="submit" class="btn btn-success px-4">
                                    Save Product
                                </button>
                            }

                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Image Preview Script -->
<script>
    const imageInput = document.getElementById("imageUrlInput");
    const imagePreview = document.getElementById("imagePreview");

    imageInput.addEventListener("input", function () {
        const url = this.value.trim();

        if (url) {
            imagePreview.src = url;
            imagePreview.style.display = "block";

            imagePreview.onerror = function () {
                imagePreview.style.display = "none";
            };
        } else {
            imagePreview.style.display = "none";
        }
    });
</script>
