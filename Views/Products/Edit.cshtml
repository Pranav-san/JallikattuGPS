@model Jallikattu.Models.Product

@{
    ViewBag.Title = "Edit Product";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <div class="row justify-content-center">
        <div class="col-lg-8">

            <div class="card shadow-sm">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">Edit Product</h4>
                </div>

                <div class="card-body">

                    @using (Html.BeginForm())
                    {
                        @Html.AntiForgeryToken()
                        @Html.HiddenFor(m => m.ProductID)

                        @Html.ValidationSummary(true, "", new { @class = "text-danger mb-3" })

                        <!-- Product Name -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ProductName, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ProductName, new { @class = "form-control" })
                        </div>

                        <!-- Price -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Price, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Price, new
                            {
                                @class = "form-control",
                                type = "number",
                                step = "0.01",
                                placeholder = "₹ Price"
                            })
                        </div>

                        <!-- Stock -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Stock, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.Stock, new
                            {
                                @class = "form-control",
                                type = "number",
                                placeholder = "Available stock"
                            })
                        </div>

                        <!-- Description -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.Description, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.Description, 5, 0,
                                new { @class = "form-control" })
                        </div>

                        <!-- Image URL -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL,
                                new
                                {
                                    @class = "form-control",
                                    id = "imageUrlInput"
                                })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL2, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL2,
                                new
                                {
                                    @class = "form-control",
                                    id = "imageUrlInput"
                                })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.ImageURL3, new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.ImageURL3,
                                new
                                {
                                    @class = "form-control",
                                    id = "imageUrlInput"
                                })
                        </div>




                        <!-- Feature Image URL &&  Description -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureImageURL, "Feature Image URL",
                                new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.FeatureImageURL,
                                new
                                {
                                    @class = "form-control",
                                    id = "featureImageUrl1",
                                    placeholder = "https://feature-image-1.jpg"
                                })
                        </div>


                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureDescription, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.FeatureDescription, 5, 0,
                                new { @class = "form-control" })
                        </div>


                        <!-- Feature Image URL 2 &&  Description 2 -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureImageURL2, "Feature Image URL",
                                new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.FeatureImageURL2,
                                new
                                {
                                    @class = "form-control",
                                    id = "featureImageUrl2",
                                    placeholder = "https://feature-image-2.jpg"
                                })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureDescription2, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.FeatureDescription2, 5, 0,
                                new { @class = "form-control" })
                        </div>




                        <!-- Feature Image URL 3 &&  Description 3 -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureImageURL3, "Feature Image URL",
                                new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.FeatureImageURL3,
                                new
                                {
                                    @class = "form-control",
                                    id = "featureImageUrl2",
                                    placeholder = "https://feature-image-2.jpg"
                                })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureDescription3, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.FeatureDescription3, 5, 0,
                                new { @class = "form-control" })
                        </div>


                        <!-- Feature Image URL 4 &&  Description 4 -->
                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureImageURL4, "Feature Image URL",
                                new { @class = "form-label fw-bold" })
                            @Html.TextBoxFor(m => m.FeatureImageURL4,
                                new
                                {
                                    @class = "form-control",
                                    id = "featureImageUrl2",
                                    placeholder = "https://feature-image-2.jpg"
                                })
                        </div>

                        <div class="mb-3">
                            @Html.LabelFor(m => m.FeatureDescription4, new { @class = "form-label fw-bold" })
                            @Html.TextAreaFor(m => m.FeatureDescription4, 5, 0,
                                new { @class = "form-control" })
                        </div>



                        <!-- Image Preview -->
                        <div class="mb-4 text-center">
                            <img id="imagePreview"
                                 src="@Model.ImageURL"
                                 alt="Product Image Preview"
                                 class="img-fluid rounded shadow-sm"
                                 style="max-height:220px;
                                        @(string.IsNullOrEmpty(Model.ImageURL) ? "display:none;" : "display:block;")" />
                        </div>

                        <!-- Buttons -->
                        <div class="d-flex justify-content-between">
                            <a href="@Url.Action("Index")"
                               class="btn btn-outline-secondary">
                                ← Back to List
                            </a>

                            <button type="submit"
                                    class="btn btn-primary px-4">
                                Update Product
                            </button>
                        </div>
                    }

                </div>
            </div>

        </div>
    </div>
</div>

<!-- Image Preview Script -->
<script>
    const imageInput = document.getElementById("imageUrlInput");
    const imagePreview = document.getElementById("imagePreview");

    imageInput.addEventListener("input", function () {
        const url = this.value.trim();

        if (url) {
            imagePreview.src = url;
            imagePreview.style.display = "block";

            imagePreview.onerror = function () {
                imagePreview.style.display = "none";
            };
        } else {
            imagePreview.style.display = "none";
        }
    });
</script>
