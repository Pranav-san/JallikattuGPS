@{
    ViewBag.Title = "Add Jallikattu Event";
}

@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
        {
            <div>@error.ErrorMessage</div>
        }
    </div>
}

<div class="container mt-4">
    <h2>Add Jallikattu Event</h2>

    <form method="post" action="/Home/AddEvent">
        <div class="mb-3">
            <label>Your Name</label>
            <input type="text" name="UserName" class="form-control" maxlength="70" placeholder="Name" required />
        </div>

        <div class="mb-3">
            <label>Mobile Number</label>
            <input type="text" name="MobileNo" class="form-control" maxlength="10" placeholder="Moile No" required />
        </div>

        <div class="mb-3">
            <label>Event Name</label>
            <input type="text" name="EventName" class="form-control" placeholder="Manju Virattu, Veli Jallikattu" required />
        </div>

        <div class="mb-3">
            <label>Event Location</label>
            <input type="text" name="EventLocation" class="form-control" placeholder="Avaniapuram, Madurai" required />
        </div>

        <div class="mb-3">
            <label>Event Date</label>
            <input type="date" name="EventDate" class="form-control" required />
        </div>

        <div class="mb-3">
            <label id="captchaQuestion" class="form-label"></label>
            <input type="text" name="CaptchaAnswer" class="form-control" required />
        </div>

        <input type="hidden" name="CaptchaExpected" id="CaptchaExpected" />

        <button type="submit" class="btn btn-primary">Submit Event</button>
        <a href="@Url.Action("Index", "Home")#View-Calendar" class="btn btn-secondary">Cancel</a>
    </form>
</div>

<script>
    function generateCaptcha() {
        var a = Math.floor(Math.random() * 5) + 1;
        var b = Math.floor(Math.random() * 5) + 1;

        document.getElementById("captchaQuestion").innerText =
            "What is " + a + " + " + b + " ?";

        document.getElementById("CaptchaExpected").value = a + b;
    }

    window.onload = generateCaptcha;
</script>

