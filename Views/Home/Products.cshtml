@model IEnumerable<Jallikattu.Models.Product>

@{
    ViewBag.Title = "Products";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-5">


    <div class="text-center mb-4">
        <h2 class="fw-bold">Our Products</h2>
        <p class="text-muted">Built to protect</p>
    </div>

    <!-- Products Grid -->
    <div class="row g-4">

        @foreach (var item in Model)
        {
           
                <div class="col-12 col-sm-6 col-md-4 col-lg-3">

                    <a href="@Url.Action("ProductDetails", "Products", new { id = item.ProductID })" class="text-decoration-none text-dark">

                        <div class="card h-100 shadow-sm border-0 product-card">

                            <!-- Product Image -->
                            <img src="@item.ImageURL"
                                 alt="@item.ProductName"
                                 class="card-img-top product-img">

                            <!-- Card Body -->
                            <div class="card-body d-flex flex-column">

                                <!-- Name -->
                                <h5 class="card-title fw-semibold mb-1">
                                    @item.ProductName
                                </h5>

                                <!-- Price -->
                                <h6 class="text-success fw-bold mb-2">
                                    ₹ @item.Price
                                </h6>

                                <!-- Description -->
                                <p class="card-text text-muted small">
                                    @if (!string.IsNullOrEmpty(item.Description))
                                    {
                                        @item.Description.Substring(0, Math.Min(100, item.Description.Length))@:
                                    }
                                </p>

                                <!-- Button -->
                                <div class="mt-auto">
                                    <a href="@Url.Action("ProductDetails", "Products", new { id = item.ProductID })" class="btn btn-outline-success w-100 mt-3">
                                        Buy now
                                    </a>
                                </div>

                            </div>
                        </div>

                    </a>

                </div>
            

                }

        </div>
</div>

<!-- Page Styles -->
<style>
    .product-img {
        height: 220px;
        object-fit: cover;
        border-top-left-radius: .375rem;
        border-top-right-radius: .375rem;
    }

    .product-card {
        transition: transform 0.2s ease, box-shadow 0.2s ease, background-color 0.75s ease;
    }

        .product-card:hover {
            transform: translateY(-1px);
            box-shadow: 0 8px 18px rgba(0,0,0,0.12);
            background-color: azure;
            cursor: pointer;
        }
</style>
